# User/Group IDs for file ownership (run: id -u and id -g to get your values)
USER_ID=1000
GROUP_ID=1000

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/app_dev?sslmode=disable
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_dev

# Application
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# JWT (generate your own secret)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRY=24h
